{
  "name": "blog",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/xg4/blog#readme",
  "bugs": {
    "url": "https://github.com/xg4/blog/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/blog.git"
  },
  "license": "MIT",
  "author": "xg4 <xingor4@gmail.com>",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "hexo generate",
    "clean": "hexo clean",
    "predeploy": "npm run build",
    "deploy": "hexo deploy",
    "lint": "prettier --write 'source/_posts/**/*.md'",
    "new": "hexo new",
    "start": "hexo server",
    "pretest": "npm run lint",
    "test": "prettier --check 'source/_posts/**/*.md'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "hexo": "^4.2.0",
    "hexo-deployer-git": "^2.1.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  },
  "hexo": {
    "version": "3.9.0"
  }
}
