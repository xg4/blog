{
  "name": "blog",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/xg4/blog#readme",
  "bugs": {
    "url": "https://github.com/xg4/blog/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/blog.git"
  },
  "license": "MIT",
  "author": "xg4 <xingor4@gmail.com>",
  "scripts": {
    "build": "hexo generate",
    "clean": "hexo clean",
    "deploy": "npm run clean && npm run build && hexo deploy",
    "lint": "prettier --write 'source/_posts/**/*.md'",
    "new": "hexo new",
    "start": "hexo server",
    "test": "prettier --check 'source/_posts/**/*.md'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "hexo": "^3.8.0",
    "hexo-deployer-git": "^1.0.0",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-marked": "^0.3.2",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.3"
  },
  "devDependencies": {
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0"
  },
  "hexo": {
    "version": "3.8.0"
  }
}
